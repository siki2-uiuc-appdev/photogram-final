<h1>List of users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>

  <% @list_of_users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.private ? 'Yes' : 'No' %></td>
      <td>
        <% if @current_user != nil%>
          <form action="/inser_follow_request">
            <button>Follow</button>
          </form>
        <% end %>
      </td>
      <td>
        <a href="/users/<%= user.username %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
