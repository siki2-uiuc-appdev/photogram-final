<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

  <% if @current_user != nil %>
    <form action="/insert_photo" enctype="multipart/form-data" method="post">
        <label for="image_box">
          Image
        </label>
        <input type="file" id="image_box" name="query_image">

        <label for="caption_box">
          Caption
        </label>
        <textarea id="caption_box" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

      
        <input type="hidden" id="comments_count_box" name="query_comments_count" value="0">
      
        <input type="hidden" id="likes_count_box" name="query_likes_count" value="0">

        <%# <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id"> %>

      <button>
        Add photo
      </button>
    </form>
  <% end %>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <img src="<%= a_photo.image %>" alt="photo" style="width: 300px; height: 400px;" />
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.poster.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
